/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
map{
  height:400px;
}
.box{
  border:2rpx solid #00b26a;
  color:#00b26a;
  margin: 15rpx;
  padding: 15rpx;
}
.title{
  font-size: 18pt;/*rpx<px<pt */
  font-weight: bold;
  padding-bottom: 10rpx;
  border-bottom: 2rpx dashed gainsboro;
}
.content{
  font-size: 12pt;
  color:black;
  margin:10rpx 0;
  line-height: 80rpx;
}
.bar{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16pt;
}
.avatar{
  width:200rpx;
  height:200rpx;
  margin-right: 20rpx;
}
map{
  width: 100%;
  height:900rpx;
}
button{
  color: white;
  background-color: #00b26a;
  
}